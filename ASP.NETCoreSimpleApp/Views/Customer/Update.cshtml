@model Customer

<div class="form-horizontal">
    <form asp-controller="Customer" asp-action="Update" method="post" class="form-horizontal" role="form">
        <h2 class="col-md-offset-2">Edit customer</h2>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Name" class="form-control" placeholder="Customer's name" />
                <span asp-validation-for="Name" class="text-danger"></span>
                @Html.HiddenFor(p => Model.CustomerId)
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Customer" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </form>
</div>